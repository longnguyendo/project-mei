<div class="admin-title">
  <h2>Users</h2>
</div>

<ul class="admin-posts">

  <% i = 0 %>
  <% users.forEach(user => { %>
    <li>
      <a class="none-underline" href="/admin/users/<%= user._id %>">
        <h4>Username <%= i+1 %>:</h4>
        <%= user.username %> 
        <h4>password <%= i+1 %> is hashed</h4>
        <%= user.password %> 
        <%= i+=1 %>
      </a>
      <div class="admin-post-controls">
        <a href="/admin/edit-users/<%= user._id %>" class="btn">Edit</a>

        <form action="/admin/delete-users/<%= user._id %>?_method=DELETE" method="POST">
          <input type="submit" value="Delete" class="btn-delete btn">
        </form>

      </div>

    </li>

  <% }) %>
</ul>